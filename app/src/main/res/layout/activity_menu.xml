<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cocktail"
    tools:context=".menu.MenuActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button_game"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/jeu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_histo"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/historique"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_game"
        app:layout_constraintVertical_bias="0.127" />
    <Button
    android:id="@+id/button_stop"
    android:layout_width="191dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/holo_blue_dark"
    android:text="stopmusique" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:text="startmusique"
        app:layout_constraintTop_toBottomOf="@+id/button_stop"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>